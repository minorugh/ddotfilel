%
% \danrakukagiA
% A方式の段落開始
% カギ括弧のみに対応
%
\def\ignorekagispace#1{\def\aaa{#1}\def\bbb{「}%
\ifx\aaa\bbb\mbox{}\kern-0.5zw「\else #1\fi}%
\everypar{\ignorekagispace}
\def\danrakukagiA{\everypar{\ignorekagispace}}
%
% \danrakuA
% A方式の段落開始
% 括弧類すべてに対応
%
\newcount\kakkocnt
\def\ignorekakkospace#1{\if\noexpand#1\relax\else
\kakkocnt=`#1 \relax
\ifnum\kakkocnt>33124 \ifnum\kakkocnt<33146
\ifodd\kakkocnt\mbox{}\kern-0.5zw\fi\fi\fi\fi#1}
\def\danrakuA{\everypar{\ignorekakkospace}}
%
% \danrakuC
% C方式の段落開始
% 括弧類すべてに対応
%
\def\ignorejisage#1{\if\noexpand#1\relax\else
\kakkocnt=`#1 \relax
\ifnum\kakkocnt>33124 \ifnum\kakkocnt<33146
\ifodd\kakkocnt\setbox0=\lastbox\mbox{}\fi\fi\fi\fi#1}
\def\danrakuC{\everypar{\ignorejisage}}
